<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Boardly Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/dashboard.css" />
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c&display=swap" rel="stylesheet">
</head>

<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="logo">Boardly</div>
            <hr>
            <nav>
                <a href="#" class="active">Sessions</a>
            </nav>
            <div class="user-profile">
                <a href="#">Welcome, <%= user.username %></a>
            </div>
        </aside>

        <main class="main-content">
            <div class="top-bar">
                <select id="sort-select">
                    <option value="date">Sort by Date</option>
                    <option value="winner">Sort by Winner</option>
                    <option value="duration">Sort by Duration</option>
                </select>
                <button id="add-session-btn">+ Add Session</button>
            </div>

            <div id="session-modal" class="modal">
                <div class="modal-content">
                    <span class="close-btn">&times;</span>
                    <h2>Add New Session</h2>
                    <form action="/sessions/add" method="POST">
                        <label>Boardgame name:</label>
                        <input type="text" name="boardgame" required />


                        <label>Winner (username):</label>
                        <input type="text" name="winner" required />

                        <label>Players (comma separated usernames):</label>
                        <input type="text" name="players" required />

                        <label>Duration (minutes):</label>
                        <input type="number" name="duration" required min="1" />

                        <button type="submit" class="submit-btn">Save Session</button>
                    </form>
                </div>
            </div>

            <div class="sessions">
                <% if (sessions.length===0) { %>
                    <p>No sessions found for your account yet.</p>
                    <% } else { %>
                        <% let currentDate='' ; %>
                        <% sessions.forEach(session=> { %>
                        <% const formattedDate=new Date(session.date).toISOString().split('T')[0]; %>
                        <% if (formattedDate !==currentDate) { %>
                            <% currentDate=formattedDate; %>
                            <h3 class="date-title">Date played: <%= formattedDate %>
                            </h3>
                        <% } %>
                        <div class="session-card">
                            <p><strong>Boardgame:</strong>
                                <%= session.boardgame %>
                            </p>
                            <p><strong>Winner:</strong>
                                <%= session.winner?.username || 'N/A' %>
                            </p>
                            <p><strong>Players:</strong>
                                <%= session.players.map(p=> p.username).join(', ') %>
                            </p>
                            <p><strong>Duration:</strong>
                                <%= Math.floor(session.duration / 60) %>h <%= session.duration %
                                        60 %>min
                            </p>
                        </div>
                        <% }) %>
                    <% } %>
            </div>

            <div class="pagination">
                <a href="/auth/signOut">Log out</a>
            </div>
        </main>
    </div>

    <script>
        const modal = document.getElementById("session-modal");
        const btn = document.getElementById("add-session-btn");
        const closeBtn = document.querySelector(".close-btn");

        btn.onclick = () => modal.style.display = "block";
        closeBtn.onclick = () => modal.style.display = "none";
        window.onclick = e => { if (e.target == modal) modal.style.display = "none"; };
    </script>
</body>

</html>