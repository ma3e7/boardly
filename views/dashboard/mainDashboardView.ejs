<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Boardly Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/dashboard.css" />
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c&display=swap" rel="stylesheet">
</head>

<body>
    <div id="dashboard-popup" class="modal"></div>
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="sidebar-bg">
                <div class="sidebar-top"></div>
                <div class="sidebar-bottom"></div>
                <img src="/svg/transition-sidebar.svg" alt="transition" class="sidebar-svg" />
            </div>

            <div class="sidebar-content">
                <div>
                    <div class="logo">Boardly</div>
                    <nav>
                        <a href="#" class="active">Friends</a>
                    </nav>
                </div>
                <div class="user-profile">
                    <%= user.username %>
                </div>
            </div>
        </aside>

        <main class="main-content">
            <div class="top-bar">
                <select id="sort-select">
                    <option value="date" <%=sortField==='date' ?'selected':'' %>>Sort by Date</option>
                    <option value="duration" <%=sortField==='duration' ?'selected':'' %>>Sort by Duration</option>
                </select>
                <button id="add-session-btn">+ Add Session</button>
                <a href="/auth/signOut" id="logout-btn">Log out</a>
            </div>

            <div class="sessions">
                <% if (sessions.length===0) { %>
                    <p>No sessions found for your account yet.</p>
                    <% } else { %>
                        <% let currentDate='' ; %>
                            <% sessions.forEach(session=> { %>
                                <% const formattedDate=new Date(session.date).toISOString().split('T')[0]; %>
                                    <% if (formattedDate !==currentDate) { %>
                                        <% currentDate=formattedDate; %>
                                            <h3 class="date-title">Date played: <%= formattedDate %>
                                            </h3>
                                            <% } %>
                                                <div class="session-card">
                                                    <div class="session-info">
                                                        <p><strong>Boardgame:</strong>
                                                            <%= session.boardgame %>
                                                        </p>
                                                        <p><strong>Winner:</strong>
                                                            <%= session.winner?.username || 'N/A' %>
                                                        </p>
                                                        <p><strong>Players:</strong>
                                                            <%= session.players.map(p=> p.username).join(', ') %>
                                                        </p>
                                                        <p><strong>Duration:</strong>
                                                            <%= Math.floor(session.duration / 60) %>h <%=
                                                                    session.duration % 60 %>min
                                                        </p>
                                                    </div>

                                                    <div class="session-actions">
                                                        <form action="/sessions/<%= session._id %>?_method=DELETE"
                                                            method="POST">
                                                            <button type="submit" class="delete-btn">Delete</button>
                                                        </form>

                                                        <button class="edit-btn"
                                                            data-url="/sessions/<%= session._id %>/edit">Edit</button>

                                                    </div>
                                                </div>


                                                <% }) %>
                                                    <% } %>
            </div>

            <div id="session-modal" class="modal">
                <div class="modal-content">
                    <span class="close-btn"><img src="/svg/icon-close.svg" alt="close icon"></span>
                    <h2>Add New Session</h2>
                    <form action="/sessions/add" method="POST">
                        <input type="text" name="boardgame" required placeholder="Name" />

                        <input type="text" name="winner" required placeholder="Winner" />

                        <input type="text" name="players" required placeholder="All players, separated by commas" />

                        <input type="number" name="duration" required min="1" placeholder="Duration" />

                        <button type="submit" class="submit-btn">Save Session</button>
                    </form>
                </div>
            </div>
            <div class="pagination">
                <% for(let i=1; i<=totalPages; i++) { %>
                    <a href="?page=<%= i %>&sort=<%= sortField %>" class="page-btn <%= page === i ? 'active' : '' %>">
                        <%= i %>
                    </a>
                    <% } %>
            </div>

        </main>
    </div>

    <script>
        const dashboardPopup = document.getElementById('dashboard-popup');
        const modal = document.getElementById("session-modal");
        const btn = document.getElementById("add-session-btn");
        const closeBtn = document.querySelector(".close-btn");
        const sortSelect = document.getElementById('sort-select');

        sortSelect.addEventListener('change', () => {
            const page = 1;
            window.location.href = `?page=${page}&sort=${sortSelect.value}`;
        });

        btn.onclick = () => modal.style.display = "flex";
        closeBtn.onclick = () => modal.style.display = "none";
        window.onclick = e => { if (e.target == modal) modal.style.display = "none"; };

        function openDashboardPopup(url) {
            fetch(url)
                .then(res => res.text())
                .then(html => {
                    dashboardPopup.innerHTML = html;
                    dashboardPopup.style.display = 'flex';

                    const closeBtn = dashboardPopup.querySelector('.close-btn');
                    if (closeBtn) {
                        closeBtn.onclick = () => dashboardPopup.style.display = 'none';
                    }
                })
                .catch(err => console.error('Error loading popup:', err));
        }



        document.querySelectorAll('.edit-btn').forEach(btn => {
            btn.addEventListener('click', e => {
                e.preventDefault();
                const url = btn.dataset.url;
                openDashboardPopup(url);
            });
        });


        window.onclick = e => {
            if (e.target === dashboardPopup) dashboardPopup.style.display = 'none';
        };
    </script>

</body>

</html>